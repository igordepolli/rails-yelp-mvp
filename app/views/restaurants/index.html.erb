<div class="container">
  <div class="d-flex justify-content-evenly mt-5">
    <% @restaurants.each do |restaurant| %>
    <div class="card p-3">
      <%= link_to restaurant.name, restaurant_path(restaurant), id: "title-card" %>
      <h5 id="category-restaurant"><i><%= restaurant.category.capitalize %> restaurant</i></h5>
    </div>
    <% end %>
  </div>
</div>
